PORT=3000
NODE_ENV=development

# Toggle mock data mode (true pour éviter PostgreSQL en local)
USE_MOCKS=false

# JSON Web Token secret (à personnaliser avant la prod)
JWT_SECRET=change-me

# Chaîne de connexion complète (prioritaire sur les variables ci-dessous)
DATABASE_URL=

# Paramètres PostgreSQL individuels (utilisés si DATABASE_URL est vide)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=biblioconnect

# SSL (mettre require si la base impose TLS)
PGSSLMODE=

# Emails des administrateurs autorisés (séparés par des virgules)
ADMIN_EMAILS=

# URL du frontend (utilisée pour les liens dans les emails)
FRONTEND_URL=http://localhost:5173

# Paramètres SMTP (prioritaire sur SMTP_URL si défini)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false
SMTP_URL=
EMAIL_FROM=no-reply@biblioconnecte.test

# Expiration des codes de réinitialisation de mot de passe (minutes)
PASSWORD_RESET_CODE_TTL_MINUTES=15
