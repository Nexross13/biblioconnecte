PORT=3000
NODE_ENV=development

# Toggle mock data mode (true pour éviter PostgreSQL en local)
USE_MOCKS=false

# JSON Web Token secret (à personnaliser avant la prod)
JWT_SECRET=change-me

# Chaîne de connexion complète (prioritaire sur les variables ci-dessous)
DATABASE_URL=

# Paramètres PostgreSQL individuels (utilisés si DATABASE_URL est vide)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=biblioconnect

# SSL (mettre require si la base impose TLS)
PGSSLMODE=

# Emails des administrateurs autorisés (séparés par des virgules)
ADMIN_EMAILS=
